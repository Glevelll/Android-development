<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="25dp"
        android:autofillHints=""
        android:backgroundTint="@color/black"
        android:layout_marginStart="15dp"
        android:ems="10"
        android:hint="@string/hint_edit"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:text="@string/hello"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <Button
        android:id="@+id/main_but"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edit_field"
        android:layout_marginHorizontal="280dp"
        android:layout_marginTop="-44dp"
        android:layout_marginStart="240dp"
        android:backgroundTint="@color/white"
        android:text="@string/mainBut"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/res"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_but"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/res2"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/res"
        android:layout_marginTop="-1dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/res3"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/res2"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/res4"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/res3"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp" />



</RelativeLayout>